# Core project identity
PROJECT_SLUG={{ cookiecutter.project_slug }}
ENVIRONMENT=foundation

# AWS
AWS_ACCOUNT_ID={{ cookiecutter.aws_account_id }}
AWS_REGION={{ cookiecutter.aws_region }}

# GitHub
GITHUB_OWNER={{ cookiecutter.github_owner }}
GITHUB_REPO={{ cookiecutter.github_repo }}
GITHUB_TOKEN=ghp_your_personal_access_token

# Pulumi
PULUMI_ORG={{ cookiecutter.pulumi_org }}
PULUMI_ACCESS_TOKEN=your-pulumi-access-token

# Visibility: private or public
GITHUB_VISIBILITY={{ cookiecutter.github_visibility }}

# Local development (optional)
# LOCALSTACK=true to point AWS SDKs to http://localhost:4566
# AWS_REGION is used by LocalStack too
# LOCALSTACK=true

# Strapi (optional for worker)
# STRAPI_URL=http://localhost:1337
# STRAPI_TOKEN=your_strapi_token
